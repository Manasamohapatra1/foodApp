<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:visibility="visible"
app:flow_horizontalAlign="center"
android:background="@drawable/burger"
tools:context=".screens.SecondScreen">

<!-- TODO: Update blank fragment layout -->
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    app:flow_horizontalAlign="center">

    <TextView
        android:id="@+id/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/breeserif_regular"
        android:padding="15dp"
        android:text="Get your order in 30 minutes"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textdescription"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Get your food delivered directly to your doorsteps in 30 min or get a refund."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:padding="10dp"
        android:background="#00000000"
        android:layout_marginTop="5dp"/>
</LinearLayout>


<ImageView
    android:id="@+id/ellipse1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ellipse1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<ImageView
    android:id="@+id/ellipse2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ellipse2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<Button
    android:id="@+id/backbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:text="Back"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<Button
    android:id="@+id/nextbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:text="Next"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/ellipse2" />







</androidx.constraintlayout.widget.ConstraintLayout>
